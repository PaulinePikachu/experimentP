#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int choice,hours,price;
     
    
   cout<< " Welcome to Faye's Internet Services!!\n\n\n ";
   
   
   cout<< "Please Choose Among the Available Packages Below \n\n";
   
   cout<<" Package A: For P995/mo,it provides 10 hrs of internet access.Additional hours costs P20/hr.\n \n";
   cout<<" Package B: For P1495/mo,it provides 20 hrs of internet access.Additional hours costs P10/hr.\n\n";
   cout<<" Package C: For P1995/mo,it provides unlimited internet access.\n\n";
   
   cout<<" Please Choose One Package: \n" ;
   cout<<" 1 for Package A        2 for Package B        3 for Package C \n\n";
   cin >>  choice; 
        
    cout<< "Number of Additional Hours Used" << endl;
    cin>> hours ;
                                        
        if (choice == 1)
		{
			price = 995 ;
			cout << "Total Monthly Bill : " << price + (hours - 10) * 20<< endl;
		}
else if (choice == 2) 
		{
			price = 1495;
			cout << "Total Monthly Bill : " << price + (hours - 20) * 10 << endl;
		}
		
else if (choice == 3)
		{
			price = 1995;
			cout << "Total Monthly Bill : " << price << endl;
		}
		
		
	cout<<"Thank you for choosing Faye's Internet Services!";
	return 0;
}

